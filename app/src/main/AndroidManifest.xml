<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nao">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_nao_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_nao"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity android:name="home"/>
        <activity android:name=".registro"
            android:parentActivityName=".Inventario">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Inventario"/>
        </activity>
        <activity android:name=".compra" />
        <activity android:name=".ayuda"/>
        <activity android:name=".productos"/>
        <activity android:name=".ver"/>
        <activity android:name=".venta" />
        <activity android:name=".editar"/>
        <activity android:name=".Inventario" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>